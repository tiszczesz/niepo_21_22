@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div>
        <a asp-action="Create" class="btn btn-primary" >Nowa książka</a>
    </div>
    <h1>Lista książek</h1>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                Lp
            </th>
            <th>
                Tytuł
            </th>
            <th>
                Autor
            </th>
            <th>
                Cena
            </th>
            <th>
                Opis
            </th>
            <th>

            </th>
        </tr>
        @{ var i = 0; }
        @foreach (var book in Model) {
            i++;
            <tr>
                <td>@i</td>
                <td><a class="card-link" asp-action="Details" asp-route-id="@book.Id">@book.Title</a></td>
                @*<td>@Html.DisplayFor(modelItem=>book.Title)</td>*@
                <td>@Html.DisplayFor(modelItem => book.Author)</td>
                <td>@Html.DisplayFor(modelItem => book.Price)</td>
                <td>@Html.DisplayFor(modelItem => book.Description)</td>
                <td>
                    <a class="btn-danger btn" asp-action="Delete" asp-route-id="@book.Id">Usuń</a>
                    <a class="btn-secondary btn" asp-action="Edit" asp-route-id="@book.Id">Edytuj</a>

                </td>
            </tr>
        }
    </table>
</div>